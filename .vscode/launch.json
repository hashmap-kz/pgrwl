{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "buildFlags": "-tags=debug",
      "args": [
        "daemon",
        "-c",
        "${workspaceFolder}/hack/configs/localfs/receive.yml"
      ],
      "env": {
        "PGHOST": "localhost",
        "PGPORT": "5432",
        "PGUSER": "postgres",
        "PGPASSWORD": "postgres",
        "PGRWL_DAEMON_MODE": "receive"
      },
      "console": "integratedTerminal"
    }
  ]
}
